<p id="notice"><%= notice %></p>

<h1>Class Names</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @class_names.each do |class_name| %>
      <tr>
        <td><%= class_name.name %></td>
        <td><%= link_to 'Show', class_name %></td>
        <td><%= link_to 'Edit', edit_class_name_path(class_name) %></td>
        <td><%= link_to 'Destroy', class_name, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Class Name', new_class_name_path %>
