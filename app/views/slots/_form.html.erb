<%= form_with(model: slot, local: true) do |form| %>
  <% if slot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(slot.errors.count, "error") %> prohibited this slot from being saved:</h2>

      <ul>
      <% slot.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-md-5 d-inline-block">
    <label>From</label>
    <%= form.text_field :from, class: "form-control", required: "true", type: "number", max: 12, min: 0 %>
  </div>
  <div class="form-group col-md-5 d-inline-block">
    <label>AM/PM</label>
    <%= form.select :from_am_pm, [["AM", "am"], ["PM", "pm"]], {}, class: "form-control", required: "true" %>

  </div>
  <div class="form-group col-md-5 d-inline-block">
    <label>To</label>
    <%= form.text_field :to, class: "form-control", required: "true", type: "number", max: 12, min: 0%>
  </div>
  
  <div class="form-group col-md-5 d-inline-block">
    <label>AM/PM</label>
    <%= form.select :to_am_pm, [["AM", "am"], ["PM", "pm"]], {}, class: "form-control", required: "true"%>
  </div>

  <div class="actions col-md-12">
    <input type="submit" name="commit" value="Save Record" data-disable-with="Save Record" class="btn btn-info">
  </div>
<% end %>
